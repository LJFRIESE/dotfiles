{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.36/schema.bar.json",
  "monitor": 0,
  "font_family": "BCSans",
  "font_size": 13,
  "height": 30,
  "transparency_alpha": 200,
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": true,
		  "display": "Icon"
        },
        "focused_window": {
          "enable": true,
		  "display": "IconAndTextOnSelected"
        },
      }
    }
  ],
  "right_widgets": [
    {
      "Update": {
        "enable": true
      }
    },
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Date": {
        "enable": true,
        "format": "YearMonthDate"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwentyFourHour"
      }
    },	
    {
      "Memory": {
        "enable": true
      }
    },
    {
      "Battery": {
        "enable": true
      }
    }
  ]
}
